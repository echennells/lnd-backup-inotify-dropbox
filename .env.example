# LND & Taproot Assets Backup Configuration
# Copy this file to .env and update with your values

# ===========================================
# STORAGE CONFIGURATION (REQUIRED)
# ===========================================
# Storage connection string - pick ONE:
# For Dropbox: dropbox:YOUR_ACCESS_TOKEN
# For Azure: azure://account.blob.core.windows.net/container?sp=racwl&...
STORAGE_CONNECTION_STRING=dropbox:YOUR_TOKEN_HERE

# ===========================================
# PATH CONFIGURATION
# ===========================================
# LND paths
LND_DATA_DIR=/home/ubuntu/volumes/.lnd
LND_CHANNEL_BACKUP_PATH=/home/ubuntu/volumes/.lnd/data/chain/bitcoin/signet/channel.backup

# TAPD paths
TAPD_DATA_DIR=/home/ubuntu/volumes/.tapd/data/mainnet
ENABLE_TAPD=false  # Set to true if running Taproot Assets

# ===========================================
# BACKUP SETTINGS
# ===========================================
# Network (mainnet, testnet, signet, regtest)
NETWORK=signet

# System identifier for multi-node setups
SYSTEM_ID=

# Local backup directory
LOCAL_BACKUP_DIR=/var/backup/lnd

# Staging directory for temporary files
STAGING_DIR=/tmp/backup-staging

# Remote backup directory in cloud storage
BACKUP_DIR=/lightning-backups

# Number of backups to keep
KEEP_LAST_N_BACKUPS=30

# ===========================================
# MONITORING SETTINGS
# ===========================================
# Check interval in seconds (fallback when inotify not available)
CHECK_INTERVAL=300

# Minimum seconds between backups (prevent backup storms)
MIN_BACKUP_INTERVAL=10

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# ===========================================
# SERVICE CONFIGURATION
# ===========================================
# Configuration directory
CONFIG_DIR=/etc/lnd-backup

# User and group for service
SERVICE_USER=lndbackup
SERVICE_GROUP=bitcoin